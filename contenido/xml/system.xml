            <check_period>
                <values>integer</values>
                <label>Update check period (minutes)</label>
                <group>Update notifier</group>
            </check_period>
        </update>
        <system>
            <clickmenu>
                <values>
                    <array_value>true</array_value>
                    <array_value>false</array_value>
