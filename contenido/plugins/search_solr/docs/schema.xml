        <field name="id_art_lang"            type="int" indexed="true" stored="true" />

        <!-- CONTENIDO IDs .. the usual suspects :) -->
        <field name="cms_htmlhead"            type="text_general" indexed="true" stored="true" multiValued="true" />
        <field name="cms_html"                type="text_general" indexed="true" stored="true" multiValued="true" />
        <field name="cms_text"                type="text_general" indexed="true" stored="true" multiValued="true" />
        <field name="cms_img"                type="text_general" indexed="false" stored="true" multiValued="true" />
        <field name="cms_imgdescr"            type="text_general" indexed="true" stored="true" multiValued="true" />
        <field name="cms_link"                type="text_general" indexed="false" stored="false" multiValued="true" />
        <field name="cms_linktarget"        type="text_general" indexed="false" stored="false" multiValued="true" />
        <field name="cms_linkdescr"            type="text_general" indexed="false" stored="false" multiValued="true" />
