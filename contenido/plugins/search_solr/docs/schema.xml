        <field name="cms_linktitle"            type="text_general" indexed="false" stored="false" multiValued="true" />
        <field name="cms_linkedit"            type="text_general" indexed="false" stored="false" multiValued="true" />
        <field name="cms_rawlink"            type="text_general" indexed="false" stored="false" multiValued="true" />
        <field name="cms_imgedit"            type="text_general" indexed="false" stored="false" multiValued="true" />
        <field name="cms_imgtitle"            type="text_general" indexed="true" stored="true" multiValued="true" />
        <field name="cms_simplelinkedit"    type="text_general" indexed="false" stored="false" multiValued="true" />
        <field name="cms_htmltext"            type="text_general" indexed="true" stored="true" multiValued="true" />
        <field name="cms_easyimgedit"        type="text_general" indexed="false" stored="false" multiValued="true" />
        <field name="cms_date"                type="text_general" indexed="true" stored="true" multiValued="true" />
        <field name="cms_teaser"            type="text_general" indexed="false" stored="false" multiValued="true" />
        <field name="cms_filelist"            type="text_general" indexed="false" stored="true" multiValued="true" />
